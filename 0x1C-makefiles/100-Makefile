CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
RM = rm -f
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -o $(NAME) $(OBJ)

clean:
	$(RM) $(OBJ) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean oclean fclean re

$(OBJ): m.h


